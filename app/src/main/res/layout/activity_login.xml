    <ImageView
        android:id="@+id/iv_logo_login"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/dimen_10dp"
        app:srcCompat="@drawable/ic_logo_200" />

    <TextView

        android:id="@+id/tvSignIn"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo_login"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/roboto"
        android:text="Ingresar"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp" />

    <EditText
        android:id="@+id/et_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSignIn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/roboto"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_login"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/roboto"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/principal_morado"
        android:fontFamily="@font/roboto"
        android:text="Login" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_google"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/principal_azul"
        android:text="o Ingresa con" />

    <ImageView
        android:id="@+id/google"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_alignTop="@+id/tv_google"
        android:layout_alignEnd="@+id/tv_google"
        android:layout_alignBottom="@+id/tv_google"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/google" />

    <TextView
        android:id="@+id/tv_google"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rectangulo"
        android:gravity="center"
        android:text="Google" />

    <TextView
        android:id="@+id/tv_registar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/principal_azul"
        android:text="Registrar" />

</RelativeLayout>